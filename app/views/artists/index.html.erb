<%= render "search" %>

<%= table_for(@artists) do |t| %>
  <% t.column("Primary Name", width: "50%") do |artist| %>
    <%= link_to h(artist.name), artist_path(artist) %>
  <% end %>
  <% t.column("Secondary Names", width: "50%") do |artist| %>
    <%= artist.other_names_string %>
  <% end %>
<% end %>

<%= numbered_paginator(@artists) %>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Artists
<% end %>
