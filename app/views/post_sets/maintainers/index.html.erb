<h1>Set Maintainer Invites</h1>

<%= table_for(@invites.where.not(status: "cooldown").select { |invite| invite.post_set.is_public? }) do |t| %>
  <% t.column("Set") do |invite| %>
    <%= link_to(invite.post_set.name, post_set_path(invite.post_set)) %>
  <% end %>
  <% t.column("Status") do |invite| %>
    <%= invite.status.titlecase %>
  <% end %>
  <% t.column("Date") do |invite| %>
    <%= compact_time(invite.updated_at) %>
  <% end %>
  <% t.column("Action") do |invite| %>
    <%= render("post_sets/maintainers/invite_links", invite: invite) %>
  <% end %>
<% end %>

<%= render partial: "post_sets/secondary_links" %>

<% content_for(:page_title) do %>
  Set Maintainers
<% end %>
