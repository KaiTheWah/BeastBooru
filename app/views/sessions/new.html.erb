<section>
  <h1>Sign in</h1>

  <%= custom_form_for(:session, url: session_path) do |f| %>
    <%= f.input(:url, as: :hidden, input_html: { value: params[:url] }) %>
    <%= f.input(:type, as: :hidden, input_html: { value: "login" }) %>
    <%= f.input(:name, label: "Username") %>
    <%= f.input(:password, label: "Password") %>
    <%= f.input(:remember, as: :boolean, label: "Remember", input_html: { checked: true }) %>
    <%= f.submit("Sign in") %>
  <% end %>
</section>

<section class="box-section">
  <h2><%= link_to "Don't have an account? Sign up here.", new_user_path %></h2>
  <h2><%= link_to "Reset Password", new_users_password_reset_path %></h2>
  <h2><%= link_to "Login Reminder", new_users_login_reminder_path %></h2>
</section>

<% content_for(:page_title) do %>
 Sign in
<% end %>

<%= render "secondary_links" %>
