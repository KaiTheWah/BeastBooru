<%# locals: (event:) -%>
<% case event.category %>
<% when "login" %>
  <%= link_to_user(event.user) %> logged in.
<% when "reauthenticate" %>
  <%= link_to_user(event.user) %> reauthenticated.
<% when "failed_login" %>
  <%= link_to_user(event.user) %> attempted to login with an incorrect password or MFA code.
<% when "banned_login" %>
  <%= link_to_user(event.user) %> attempted to login while banned.
<% when "failed_reauthenticate" %>
  <%= link_to_user(event.user) %> attempted to reauthenticate with an incorrect password.
<% when "logout" %>
  <%= link_to_user(event.user) %> logged out.
<% when "user_creator" %>
  <%= link_to_user(event.user) %> created their account.
<% when "user_deletion" %>
  <%= link_to_user(event.user) %> deleted their account.
<% when "password_reset_request" %>
  <%= link_to_user(event.user) %> request to reset their password.
<% when "password_reset" %>
  <%= link_to_user(event.user) %> reset their password.
<% when "password_change" %>
  <%= link_to_user(event.user) %> changed their password.
<% when "email_change" %>
  <%= link_to_user(event.user) %> changed their email.
<% when "mfa_enable" %>
  <%= link_to_user(event.user) %> enabled two-factor authentication.
<% when "mfa_update" %>
  <%= link_to_user(event.user) %> updated two-factor authentication.
<% when "mfa_disable" %>
  <%= link_to_user(event.user) %> disabled two-factor authentication.
<% when "mfa_login" %>
  <%= link_to_user(event.user) %> logged in with two-factor authentication.
<% when "mfa_login_pending_verification" %>
  <%= link_to_user(event.user) %> entered their password. Awaiting MFA verification.
<% when "mfa_failed_login" %>
  <%= link_to_user(event.user) %> attempted to login with an incorrect MFA code.
<% when "mfa_reauthenticate" %>
  <%= link_to_user(event.user) %> reauthenticated with two-factor authentication.
<% when "mfa_reauthenticate_pending_verification" %>
  <%= link_to_user(event.user) %> entered their password for reauthentication. Awaiting MFA verification.
<% when "mfa_failed_reauthenticate" %>
  <%= link_to_user(event.user) %> attempted to reauthenticate with an incorrect MFA code.
<% when "backup_codes_generate" %>
  <%= link_to_user(event.user) %> regenerated their backup codes.
<% when "backup_code_login" %>
  <%= link_to_user(event.user) %> logged in with a backup code.
<% when "backup_code_reauthenticate" %>
  <%= link_to_user(event.user) %> reauthenticated with a backup code.
<% else %>
  <%= event.category %>
<% end %>
